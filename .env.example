# RStudio Server Docker Configuration
# Copy this file to .env and customize as needed

# Number of RStudio instances (1-10)
RSTUDIO_INSTANCES=5

# Base port (instances will use BASE_PORT, BASE_PORT+1, BASE_PORT+2, ...)
RSTUDIO_BASE_PORT=8787

# Default password for RStudio users (each user gets username_X as password by default)
# Set to empty to use default per-user passwords
RSTUDIO_PASSWORD=

# Share Claude configuration from host (~/.claude)
# true: mount host's ~/.claude to all containers
# false: each container has independent Claude config
SHARE_CLAUDE_CONFIG=true

# Include runner container for batch processing
INCLUDE_RUNNER=true
